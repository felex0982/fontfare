<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{fontName}}</title>
    <link rel="stylesheet" type="text/css" href="./main.css">
    <style>
        body {
            font-family: sans-serif;
            margin: 0;
            padding: 10px 20px;
        }
        table {
            width: 100%;
        }
        th, td {
            text-align: center;
            padding: 5px 10px;
        }
        table, th, td {
            border: 2px solid #333;
        }
        .preview {
            line-height: 2em;
        }

        .preview__icon {
            display: inline-block;
            width: 32px;
            text-align: center;
        }
        .{{baseSelector}} {
            display: inline-block;
            font-size: 32px;
        }
    </style>
</head>
<body>
<h1>{{fontName}}</h1>
<table>
    <thead>
    <tr>
        <th>Preview</th>
        <th>Name</th>
        <th>Code</th>
    </tr>
    </thead>
    <tbody>
    {{#each names}}
        <tr>
            <td>
                <span class="preview__icon">
			        <span class="{{../baseSelector}} {{../classPrefix}}{{this}}"></span>
		        </span>
            </td>
            <td>
                <span>{{this}}</span>
            </td>
            <td>
                <code>
                    &lt;i class="{{../baseSelector}} {{../classPrefix}}{{this}}"&gt;&lt;i/&gt;
                </code>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
</body>
</html>
